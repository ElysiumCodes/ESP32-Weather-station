#include <WiFi.h>
#include <HTTPClient.h>
#include <ArduinoJson.h>
#include <Wire.h>
#include "DHT.h"
#include <Adafruit_BMP085.h>

// Network credentials
const char* ssid = "Ec3";
const char* password = "eeeeeeee";

// API endpoint
String endpoint = "https://sensors-dashboard-caco3.vercel.app/api/clients/hehe";

// Sensor pins and initialization
#define DHTPIN 2
#define DHTTYPE DHT11

// Sensor objects
DHT dht(DHTPIN, DHTTYPE);
Adafruit_BMP085 bmp;

// Sensor variables
float temperature, humidity, pressure;

void setup() {
  Serial.begin(115200);
  
  // Initialize sensors
  dht.begin();
  if (!bmp.begin()) {
    Serial.println("Could not find a valid BMP085/BMP180 sensor, check wiring!");
    while (1) {}
  }
  
  // Connect to WiFi
  WiFi.begin(ssid, password);
  Serial.println("Connecting to WiFi");
  while(WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("");
  Serial.print("Connected to WiFi network with IP Address: ");
  Serial.println(WiFi.localIP());
}

void readSensorData() {
  // Read from DHT sensor
  humidity = dht.readHumidity();
  
  // Read from BMP sensor
  temperature = bmp.readTemperature();
  pressure = bmp.readPressure();
  
  // Print sensor readings to Serial
  Serial.println("\n----- Sensor Readings -----");
  Serial.print("Temperature: ");
  Serial.print(temperature);
  Serial.println(" Â°C");
  
  Serial.print("Humidity: ");
  Serial.print(humidity);
  Serial.println(" %");
  
  Serial.print("Pressure: ");
  Serial.print(pressure);
  Serial.println(" Pa");
}

void sendSensorData() {
  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    http.begin(endpoint);
    http.addHeader("Content-Type", "application/json");

    StaticJsonDocument<200> jsonDoc;
    jsonDoc["temperature"] = temperature;
    jsonDoc["humidity"] = humidity;
    jsonDoc["pressure"] = pressure;

    String jsonData;
    serializeJson(jsonDoc, jsonData);

    int httpResponseCode = http.POST(jsonData);

    if (httpResponseCode > 0) {
      String response = http.getString();
      Serial.print("HTTP Response code: ");
      Serial.println(httpResponseCode);
      Serial.print("Response: ");
      Serial.println(response);
    } else {
      Serial.print("Error on sending POST: ");
      Serial.println(httpResponseCode);
    }

    http.end();
  } else {
    Serial.println("WiFi not connected");
  }
}

void loop() {
  readSensorData();    // Read from actual sensors
  sendSensorData();    // Send data to server
  delay(3000);         // Wait for 3 seconds before next reading
}
